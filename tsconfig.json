{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"],
        "config/*": ["src/config/*"],
        "models/*": ["src/models/*"],
        "routes/*": ["src/routes/*"]
      }
    },
    "include": ["src/**/*.ts", "server.ts"],
    "exclude": ["node_modules", "dist"]
  }
  